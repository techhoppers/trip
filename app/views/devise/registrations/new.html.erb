<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <p><%= f.label :name, :class => "inputLabel" %>
    <%= f.text_field :name, :class => "inputBox"  %></p>

  <p><%= f.label :email, :class => "inputLabel" %>
    <%= f.email_field :email, :class => "inputBox"  %></p>

  <p><%= f.label :password, :class => "inputLabel"  %>
    <%= f.password_field :password, :class => "inputBox" %></p>

  <p><%= f.label :password_confirmation, :class => "inputLabel"  %>
    <%= f.password_field :password_confirmation, :class => "inputBox" %></p>

  <p><%= f.submit "Sign up", :class => "inputButton fleft" %></p>
<% end %>
<br class="clear"/>  
<br class="clear"/>
<%= render "devise/shared/links" %>
